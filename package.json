{
  "name": "typescript-microservice",
  "version": "0.2.1",
  "main": "app.ts",
  "repository": "https://github.com/timothymiller/dockerized-typescript-app-template.git",
  "author": "tim.miller@preparesoftware.com",
  "license": "GPL-3.0-with-autoconf-exception",
  "private": false,
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "test": "mocha -r ts-node/register 'src/**/*.test.ts'",
    "deploy:locally:AMD64": "yarn docker:build:AMD64 && docker run timothyjmiller/typescript-microservice:latest",
    "deploy:locally": "yarn docker:build && docker run timothyjmiller/typescript-microservice:latest",
    "build": "tsc -p . && rollup -c",
    "docker:build": "docker buildx build --platform linux/ppc64le,linux/s390x,linux/386,linux/arm/v6,linux/arm/v7,linux/arm64/v8,linux/amd64 --tag timothyjmiller/typescript-microservice:latest .",
    "docker:build:AMD64": "docker build -t timothyjmiller/typescript-microservice:latest .",
    "check-updates": "yarn && yarn outdated",
    "update-dependencies": "npx npm-check-updates -u && yarn",
    "dockerhub:publish": "docker buildx build --platform linux/ppc64le,linux/s390x,linux/386,linux/arm/v6,linux/arm/v7,linux/arm64/v8,linux/amd64 --tag timothyjmiller/typescript-microservice:latest --push .",
    "dockerhub:publish:AMD64": "docker build -t timothyjmiller/typescript-microservice:development .",
    "npm:publish": "npm publish --access public"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@rollup/plugin-strip": "^2.0.0",
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rollup": "^2.46.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-visualizer": "^5.4.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
